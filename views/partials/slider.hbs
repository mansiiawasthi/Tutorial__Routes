  </div>

  <div class="carousel-inner">
{{#each slides}}
    <div class="carousel-item {{this.class}}">
      <img src="{{this.imageUrl}}" class="d-block w-100 slider-image" alt=" ">
      <div class="carousel-caption d-none d-md-block">
        {{!-- <div class="carousel-caption d-none d-md-block "> --}}
          <div class="carousel-caption d-none d-md-flex flex-column justify-content-end align-items-center" style="bottom: 8; left: 25%; transform: translateX(-25%);">
        <h2>{{this.title}}</h2>
        <p style="color: black; font-size: 20px;">{{this.subTitle}}</p>
      </div>
      </div>
    </div>
{{/each}}

